# relacion_genero.py

class Arista:
    def __init__(self, genero1, genero2, peso=1):
        self.genero1 = genero1
        self.genero2 = genero2
        self.peso = peso

    def incrementar_peso(self):
        self.peso += 1

    def __eq__(self, other):
        if not isinstance(other, Arista):
            return False
        return ({self.genero1, self.genero2} == {other.genero1, other.genero2})

    def __hash__(self):
        return hash(frozenset((self.genero1, self.genero2)))

    def __repr__(self):
        return f"Arista({self.genero1.nombre}, {self.genero2.nombre}, peso={self.peso})"
